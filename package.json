{
  "name": "pomolocal",
  "version": "0.0.7",
  "description": "A Mac-first, Anti-Distraction CLI Pomodoro timer",
  "main": "dist/cli.js",
  "type": "module",
  "private": false,
  "bin": {
    "pomolocal": "dist/cli.js"
  },
  "files": [
    "dist",
    "fonts"
  ],
  "scripts": {
    "build": "bun build src/index.tsx --outfile=dist/cli.js --target=bun && bun run scripts/postbuild.ts && mkdir -p fonts && cp -r node_modules/cfonts/fonts/* fonts/",
    "start": "bun run src/index.tsx",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "react-devtools-core": "^7.0.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "ink": "^6.6.0",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "meow": "^14.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}
